
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ğŸ”„ TRANSACTIONS - Core collection for payment processing
    match /transactions/{transactionId} {
      // Allow Cloud Functions to create/update transactions
      allow read, write: if request.auth != null;
      // Allow users to read their own transactions
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.userId || 
                      request.auth.token.admin == true);
    }
    
    // ğŸ’³ PAYMENTS - Legacy support (keep if still used)
    match /payments/{paymentId} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸµ BEATS - Public read, creator write
    match /beats/{id} {
      allow read: if true; // ğŸ”“ Public can read
      allow write: if request.auth != null && 
                      request.auth.uid == resource.data.userId; // Only creator can write
    }
    
    // ğŸ‘¤ USERS - User profile management
    match /users/{userId} {
      // Users can read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Cloud Functions can read any user (for admin operations)
      allow read: if request.auth != null && request.auth.token.admin == true;
    }
    
    // ğŸ›’ USER PURCHASES - Track what users have bought
    match /users/{userId}/purchases/{purchaseId} {
      // Users can read their own purchases
      allow read: if request.auth != null && request.auth.uid == userId;
      // Cloud Functions can write purchases
      allow write: if request.auth != null;
    }
    
    // ğŸ“Š ANALYTICS - Optional for tracking
    match /analytics/{document=**} {
      // Only Cloud Functions can write analytics
      allow write: if request.auth != null && request.auth.token.admin == true;
      allow read: if request.auth != null && request.auth.token.admin == true;
    }
    
    // ğŸ” DEBUG - Temporary collection for troubleshooting (remove in production)
    match /debug/{debugId} {
      allow read, write: if request.auth != null;
    }
  }
}
